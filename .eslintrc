{
  "globals": {
    "__DEV__": true,
    "window": true,
    "document": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {

  },
  "root": true,
  "plugins": [
    "simple-import-sort",
    "@typescript-eslint"
  ],
  "extends": [
    "airbnb",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended"
  ],
  "rules": {
    "simple-import-sort/exports": "error",
    "import/newline-after-import": "error",
    "import/no-duplicates": "error",
    "import/first": "error",
    "sort-imports": "off",
    "simple-import-sort/imports": "off",
    "class-methods-use-this": "off",
    "max-len": [2, { "code": 140 }],
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "groups": [
          ["external", "builtin"], "internal", ["sibling", "parent"], "index"
        ],
        "pathGroups": [
          { "pattern": "@*", "group": "internal" }
        ],
        "pathGroupsExcludedImportTypes": ["internal"],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "react/jsx-props-no-spreading": "off",
    "no-useless-constructor": "off",
    "react/no-unstable-nested-components": "off",
    "arrow-parens": [2, "as-needed"],
    "import/prefer-default-export": "off",
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["error"],
    "no-underscore-dangle": "off",
    "react/jsx-no-bind": "off",
    "no-use-before-define": "off",
    "react/jsx-no-constructed-context-values": "off",
    "react/require-default-props": "off",
    "react/jsx-no-useless-fragment": "off",
    "@typescript-eslint/no-use-before-define": ["error"],
    "jsx-a11y/control-has-associated-label": "off",
    "jsx-a11y/anchor-has-content": "off",
    "jsx-a11y/label-has-associated-control": "off",
    "no-return-assign": "warn",
    "@typescript-eslint/no-var-requires": "warn",
    "import/no-extraneous-dependencies": "warn",
    "no-param-reassign": "warn",
    "react/jsx-filename-extension": [2, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }],
    "@typescript-eslint/no-empty-interface": "off",
    "react/function-component-definition": [2, {"namedComponents": "arrow-function", "unnamedComponents": "arrow-function"}],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".json"]
      },
      "alias": {
        "map": [
          [ "@client", "./_client" ],
          [ "@stores", "./_client/data/stores" ],
          [ "@components", "./_client/components" ],
          [ "@pages", "./_client/pages" ],
          [ "@utils", "./_client/utils" ],
          [ "@data", "./_client/data" ],
          [ "@services", "./_client/services" ],
          [ "@ui", "./_client/ui" ],
          [ "@config", "./_client/config" ],
          [ "@specs", "./_client/specs" ],
          [ "@style", "./_client/style" ],
          [ "@translations", "./_client/translations" ],
          [ "@icons", "./_client/ui/_misc/icons" ],
          [ "@hooks", "./_client/hooks" ],
          [ "@api", "./_client/api" ],
          [ "@requests", "./_client/api/requests" ]
        ],
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".json"]
      }
    }
  }
}
